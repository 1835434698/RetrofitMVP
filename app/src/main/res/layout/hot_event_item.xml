<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ad_close_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ad_show"
        android:layout_alignLeft="@id/ad_show"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ad_close"
            android:layout_width="32dp"
            android:layout_height="29dp"
            android:src="@drawable/ad_close"/>

        <View
            android:id="@+id/ad_close_line"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#fff"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/ad_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ad_item_shape"/>

</RelativeLayout>