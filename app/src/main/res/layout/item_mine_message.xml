<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_item_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/height_10dp">

    <TextView
        android:id="@+id/message_item_tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="11月22日  14:34:00"
        android:textColor="@color/color656565"
        android:textSize="@dimen/text_XXXS" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_8dp"
        android:layout_marginRight="@dimen/width_8dp"
        android:layout_marginTop="@dimen/height_10dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/height_5dp"
        app:cardElevation="@dimen/width_2dp"
        app:cardMaxElevation="@dimen/width_2dp"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/height_5dp"
                android:paddingBottom="@dimen/height_5dp"
                android:paddingLeft="@dimen/width_10dp"
                android:paddingRight="@dimen/width_10dp"
                android:paddingTop="@dimen/width_10dp">

                <TextView
                    android:id="@+id/message_item_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="关于掌富通费率调整的通知"
                    android:textColor="@color/text_color_dark_333333"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/message_item_tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/message_item_tv_title"
                    android:layout_marginTop="@dimen/height_10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="掌富通（北京）电子支付技术限公司是一家移动电子服务商,致力于为中国移动电子商务提供“稳定”、“安全”、“快捷”电子支付技术限公司是一家移动电子服务商,致力于为中国移动电子商务提供“稳定”、“安全”、“快捷电子支付技术限公司是一家移动电子服务商,致力于为中国移动电子商务提供“稳定”、“安全”、“快捷电子支付技术限公司是一家移动电子服务商,致力于为中国移动电子商务提供“稳定”、“安全”、“快捷"
                    android:textColor="@color/color666666"
                    android:textSize="@dimen/text_XXXS" />

                <View
                    android:id="@+id/item_view_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/message_item_tv_content"
                    android:layout_marginTop="@dimen/width_8dp"
                    android:background="@color/login_view_line_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_view_line"
                    android:layout_marginTop="@dimen/height_8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/message_item_tv_read"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/read_message"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_XXXS" />

                    <ImageView
                        android:id="@+id/message_item_iv_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/all_arrows" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/message_item_iv_hadread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/message_item_hadread" />
        </FrameLayout>
    </android.support.v7.widget.CardView>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_1dp"
        android:layout_marginTop="@dimen/width_3dp"></View>
</LinearLayout>