<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mine_message_img_pop_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pop_message_item_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_20dp"
        android:gravity="center"
        android:text="@string/pop_mine_message_item1"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_XS" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_1dp"
        android:layout_marginTop="@dimen/height_5dp"
        android:background="@color/colorE96F69" />
    <TextView
        android:id="@+id/pop_message_item_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_10dp"
        android:layout_marginBottom="@dimen/width_10dp"
        android:gravity="center"
        android:text="@string/pop_mine_message_item2"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_XS" />
</LinearLayout>