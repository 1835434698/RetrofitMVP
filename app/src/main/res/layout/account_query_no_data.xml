<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:layout_width="126dp"
        android:layout_height="124dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_72dp"
        android:background="@drawable/account_query_no_data"/>

    <TextView
        android:id="@+id/query_no_data_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/width_19dp"
        android:gravity="center_horizontal"
        android:text="@string/no_transaction_record"
        android:textColor="@color/color4c4747"
        android:textSize="@dimen/text_XS"/>
</LinearLayout>