<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_73dp"
                android:background="@color/white">

    <TextView
        android:id="@+id/bind_card_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:textColor="@color/color707070"
        android:textSize="@dimen/text_LL"/>

    <TextView
        android:id="@+id/bind_card_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/bind_card_bank"
        android:layout_below="@id/bind_card_bank"
        android:layout_marginTop="@dimen/margin_5dp"
        android:textColor="@color/color999999"
        android:textSize="@dimen/text_XS"/>

    <TextView
        android:id="@+id/bind_card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bind_card_user"
        android:layout_marginLeft="@dimen/margin_18dp"
        android:layout_toRightOf="@id/bind_card_user"
        android:textColor="@color/color999999"
        android:textSize="@dimen/text_XS"/>
</RelativeLayout>