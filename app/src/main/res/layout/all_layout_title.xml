<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relTitle"
    android:layout_width="match_parent"
    android:layout_height="@dimen/all_title_height"
    android:background="@color/colorE44036"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/tvLeft"
        style="@style/menu_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:scaleType="center"
        android:src="@drawable/all_img_back" />

    <ImageView
        android:id="@+id/imgLeftTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvLeft"
        android:layout_marginLeft="@dimen/mul_size_two"
        android:layout_toRightOf="@+id/tvLeft"
        android:scaleType="center"
        android:src="@drawable/hot"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/title_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvRight"
        style="@style/menu_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@drawable/sys_msg"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgRightTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tvRight"
        android:src="@drawable/sys_msg_point"
        android:visibility="gone" />


</RelativeLayout>