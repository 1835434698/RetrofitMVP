<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/margin_5dp"
    android:background="@color/colorF1F1F1">

    <com.cnepay.android.swiper.widget.StickyNavLayout
        android:id="@+id/home_page_sticky"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.cnepay.android.swiper.widget.CirView
            android:id="@+id/home_page_cirView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorF1F1F1"/>

        <com.cnepay.android.swiper.widget.NestGridView
            android:id="@+id/home_page_gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"/>


        <com.cnepay.android.swiper.widget.ReboundScrollView
            android:id="@+id/home_page_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.cnepay.android.swiper.widget.ReboundScrollView>

    </com.cnepay.android.swiper.widget.StickyNavLayout>

    <ImageView
        android:id="@+id/home_page_rotate"
        android:layout_width="@dimen/width_25dp"
        android:layout_height="@dimen/height_13dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_17dp"
        android:background="@drawable/home_page_rotate"/>

</RelativeLayout>

