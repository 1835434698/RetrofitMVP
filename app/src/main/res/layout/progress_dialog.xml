<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/loading_back">

    <ImageView
        android:id="@+id/load_img"
        android:layout_width="@dimen/width_60dp"
        android:layout_height="@dimen/height_60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/loading_progress"/>

    <TextView
        android:id="@+id/load_text"
        android:layout_width="@dimen/width_90dp"
        android:layout_height="@dimen/height_90dp"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="15dp"
        android:text="@string/wait_moment"
        android:textColor="@color/white"
        android:textSize="@dimen/text_XXXS"/>

</RelativeLayout>
